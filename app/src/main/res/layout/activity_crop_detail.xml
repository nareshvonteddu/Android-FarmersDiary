<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vnr.farmersdiary.CropDetail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/material_deep_teal_200"
        android:id="@+id/editRelativeLayout">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button2"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="false"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_create_black_24dp"
            android:scaleType="centerInside"
            android:padding="10dp"
            android:background="@drawable/button_add_round_background" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/editRelativeLayout"
        android:background="@drawable/crop_expenses_background"
        android:layout_margin="10dp"
        android:clickable="true"
        android:onClick="OnInvestmentsButtonClick"
        android:id="@+id/investmentLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Investment"
            android:id="@+id/textView7"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:id="@+id/investmentTotalAmountText"
            android:layout_alignTop="@+id/textView7"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/investmentLayout"
        android:rowCount="2" android:columnCount="1"
        android:layout_margin="5dp">
        <GridLayout
            android:layout_height="25dp"
            android:id="@+id/investmentRect"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"></GridLayout>
        <!-- -->
        <!--<TextView android:layout_row="0"-->
            <!--android:layout_column="1"-->
            <!--android:text="investment"-->
            <!--android:layout_gravity="center_vertical" />-->
        <GridLayout
            android:layout_height="25dp"
            android:id="@+id/incomeRect"
            android:layout_width="match_parent"
            android:layout_row="1"
            android:layout_gravity="top"></GridLayout>
        <!--<TextView android:layout_row="1" android:layout_column="1"-->
            <!--android:text="income" android:id="@+id/incomeRectTextView"-->
            <!--android:layout_gravity="center_vertical" />-->
    </GridLayout>



    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cropDetailProgressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
