<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="70dp"
    android:gravity="left|center" android:paddingBottom="6dp" android:paddingLeft="6dp"
    android:paddingRight="6dp" android:paddingTop="6dp"
    android:background="@drawable/farmer_crop_listitem_done_background" android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
    android:id="@+id/farmerListViewItemLayout"
    android:columnCount="5"
    android:rowCount="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCropName"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCropAcres"
        android:layout_column="1"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPlantedDate"
        android:layout_column="2"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="15dp" />

    <ImageView
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_column="3"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_thumb_down_black_24dp"
        android:id="@+id/thumbImage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text=">"
        android:layout_gravity="center_vertical|right"
        android:layout_column="4" />

</GridLayout>
