<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vnr.farmersdiary.farmerCrops"
    android:orientation="vertical"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/material_deep_teal_200"
        android:id="@+id/buttonRelativeLayout">

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="20dp"
            android:id="@+id/button"
            android:textStyle="bold"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:onClick="onAddCropClick"
            android:background="@drawable/button_add_round_background"
            android:layout_centerVertical="true"
            android:textAlignment="center" />
    </RelativeLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/farmerCropListView"
        android:layout_below="@id/buttonRelativeLayout"
        android:layout_margin="10dp"
        android:dividerHeight="10sp"
        android:drawSelectorOnTop="false"
        android:divider="@android:color/transparent"
        android:background="#ffffff"/>

</RelativeLayout>
